<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/okta_backend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/okta_backend"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mock_scenarios"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/username_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_password"
            />

        <Button
            android:id="@+id/mfa_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mfa_email"
            />

        <Button
            android:id="@+id/enroll_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enroll"
            />
    </LinearLayout>
</ScrollView>
