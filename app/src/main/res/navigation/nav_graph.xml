<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/DirectAuthFragment"
    >
    <fragment
        android:id="@+id/DirectAuthFragment"
        android:name="com.okta.idx.android.directauth.DirectAuthFragment"
        tools:layout="@layout/fragment_direct_auth"
        >
        <action
            android:id="@+id/directAuth_to_dashboard"
            app:destination="@id/DashboardFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/DashboardFragment"
        android:name="com.okta.idx.android.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_dashboard"
        >
        <action
            android:id="@+id/dashboard_to_login"
            app:destination="@id/DirectAuthFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>
