<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LaunchFragment"
    >
    <fragment
        android:id="@+id/LaunchFragment"
        android:name="sample.okta.oidc.android.LaunchFragment"
        tools:layout="@layout/fragment_launch"
        >
        <action
            android:id="@+id/launch_to_browser"
            app:destination="@id/BrowserFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/BrowserFragment"
        android:name="sample.okta.oidc.android.browser.BrowserFragment"
        tools:layout="@layout/fragment_browser"
        >
        <action
            android:id="@+id/browser_to_dashboard"
            app:destination="@id/DashboardFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/DashboardFragment"
        android:name="sample.okta.oidc.android.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_dashboard"
        >
        <action
            android:id="@+id/dashboard_to_login"
            app:destination="@id/LaunchFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>
